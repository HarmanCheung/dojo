class Person {
    constructor(id,name, age) {
        this.id = id;
        this.name = name;
        this.age = age;
    }

    introduce() {
        return 'My name is ' + this.name + '.I am ' + this.age + ' years old.';
    }
}

class Student extends Person{
    constructor(id,name,age,klass){
        super(id,name,age);
        this.klass = klass;
    }

    introduce(){
        if(this.klass.leader === this.name){
            return super.introduce() + 'I am a Student.I am Leader of Class ' + this.klass.number;
        }
        else {
            return super.introduce() + 'I am a Student.I am at Class ' + this.klass.number;
        }
    }
}

class Klass{
    constructor(number){
        this.number = number;
    }
    assignLeader(student){
        if(student.klass.number == this.number) {
            this.leader = student.name;
        }
        else{
            console.log('It is not one of us.');
        }
    }
    appendMember(student){
        student.klass.number = this.number;
    }

    isIn(student){
        if(this.number = student.klass.number){
            return true;
        }
        else{
            return false;
        }
    }
}

class Teacher extends Person {
    constructor(id, name, age, klasses) {
        super(id, name, age);
        this.klasses = klasses;
    }

    introduce() {
        if (this.klasses.length == 0) {
            return super.introduce() + 'I am a Teacher.I teach No Class';
        }
        else {
            var str = '';
            for(var i = 0; i < this.klasses.length - 1;i++) {
                str += this.klasses[i].toString() + ','
            }
            str += this.klasses[this.klasses.length - 1].toString();
            return super.introduce() + 'I am a Teacher.I teach Class' + str + '.';
        }
    }

    isTeaching(student){
        if(this.klasses.indexOf(student.klass.number) < 0){
            return false;
        }
        else{
            return true;
        }
    }


    introduceWith(student) {
        if (this.isTeaching(student)) {
            return super.introduce() + 'I am a Teacher.I teach ' + student.name + '.';
        }
        else {
            return super.introduce() + 'I am a Teacher.I donâ€™teach ' + student.name + '.';
        }
    }
}


